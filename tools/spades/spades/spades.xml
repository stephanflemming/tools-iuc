    <expand macro="requirements" />

    <command detect_errors="exit_code"><![CDATA[




        ## run: tool
        spades.py
            -k 21,33,55,77,99,127
            $careful
            -1 ecoli_1K_1.fq
            -2 ecoli_1K_2.fq
            -t 2
            -o output



    ]]></command>

