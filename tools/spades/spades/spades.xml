        <expand macro="input_required" />

        <param argument="--careful" type="boolean" checked="True" truevalue="--careful" falsevalue="" label="Set careful correction" help="" label="Careful correction?" name="careful" truevalue="--careful" type="boolean" />
    
        <conditional name="conditional_k" label="" help="">
            <param argument="-k" name="k" type="boolean" checked="False" truevalue="true" falsevalue="false" label="Auto select kmers" help=""/>
